{
    "compilerOptions": {
        "outDir": "dist",//biên dịch all ts sang js vào thư mục dist
        "target": "ES6",//cho phép biên dịch code typescript sang kiểu ES6 là các Arrow  function các thứ

        // mấy cái mà module.exports require ..
        "module": "commonjs",//Commonjs là tiêu chuẩn được sử dụng trong nodejs dể làm việc với các module 

        "removeComments": true, //Xóa comments khi biên dịch sang file js 
        "esModuleInterop": true//dùng đc từ khóa import thay cho require
    }
}

//gõ tsc thôi là đc ko cần tsc tên file nữa
// còn muốn nó tự động biên dịch thì tsc -w (watch)